---
import { Image } from 'astro:assets';
import LogoImage from '@/images/logo.png';
import '@/global.css';

const serviceName = 'Notion-Google Tasks Sync';

interface Props {
	title?: string;
	desc?: string;
	isUserDeniedGAccess?: boolean;
	isUserDeniedNAccess?: boolean;
	isGAuthError?: boolean;
	isNAuthError?: boolean;
}

const defaultTitle =
	'Notion <=> Google Tasks: Sync Your Tasks in 1 minute for Free!';
const defaultDescription =
	'Synchronize your tasks between Notion and Google Tasks instantly and securely. Our two-way sync service ensures your data is always up-to-date and safe. Try it for free today!';
const {
	title = defaultTitle,
	desc = defaultDescription,
	isUserDeniedGAccess = false,
	isUserDeniedNAccess = false,
	isGAuthError = false,
	isNAuthError = false,
} = Astro.props;
const today = new Date();
const imageUrl = new URL(LogoImage.src, Astro.url.origin);
const canonicalURL = Astro.site;
const ogTitle = 'Sync Notion & Google Tasks for Free!';
const ogDesc =
	'Real-time, two-way syncing for free. Simplify task management across platforms effortlessly';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta
			name="copyright"
			content={`2023-${today.getFullYear()}, Alexey Antipov`}
		/>

		<title>{title}</title>
		<meta name="description" content={desc} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={ogTitle} />
		<meta property="og:description" content={ogDesc} />
		<meta property="og:image" content={imageUrl} />

		<!-- Twitter -->
		<meta name="twitter:creator" content="@_aantipov" />
		<meta property="twitter:card" content="summary" />
		<meta property="twitter:title" content={ogTitle} />
		<meta property="twitter:description" content={ogDesc} />
		<meta property="twitter:image" content={imageUrl} />

		<!-- Favicon -->
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
		<link rel="manifest" href="/site.webmanifest" />

		<script is:inline src="https://player.vimeo.com/api/player.js"></script>

		<!-- Analytics -->
		<script
			defer
			data-domain="notion-google-tasks-sync.com"
			src="https://plausible.io/js/script.js"></script>

		<script>
			import * as Sentry from '@sentry/browser';

			// PUBLIC_ENV is set in npm build script
			const isProd = import.meta.env.PUBLIC_ENV === 'production';

			if (isProd) {
				Sentry.init({
					dsn: 'https://0593d322e7b404381ce143e1f38db3e7@o477177.ingest.sentry.io/4506587593048064',
					debug: false,
					release: 'notion-google-tasks-website@1.0.0',
					environment: 'production',
					sampleRate: 1.0, // 0.1 = 10% of events sent
					autoSessionTracking: true,
					tracesSampleRate: 1.0,
					replaysSessionSampleRate: 0.01, // 0.1 = 10% of sessions are recorded
					replaysOnErrorSampleRate: 1.0, // 0.1 = 10% of errors are recorded
					integrations: [new Sentry.BrowserTracing(), new Sentry.Replay()],
				});
			}
		</script>
	</head>
	<body class="bg-white text-lg text-gray-800">
		{
			(isUserDeniedGAccess || isUserDeniedNAccess) && (
				<div class="flex items-center justify-center bg-red-500 px-4 py-1 text-base font-semibold text-white sm:py-3">
					<div class="max-w-2xl">
						Authorization denied. To use our synchronization service, you need
						to grant access to your Google Tasks and Notion database.
					</div>
				</div>
			)
		}
		{
			(isGAuthError || isNAuthError) && (
				<div
					id="auth-error"
					class="flex flex-col items-center justify-center bg-red-500 px-4 py-1 text-base font-semibold text-white sm:py-3"
				>
					<div class="max-w-2xl">
						Error connecting to {isGAuthError ? 'Google' : 'Notion'}. To use our
						synchronization service, you need to grant access to both your
						Google Tasks and Notion database.
						<div class="mt-1">
							Please try again. If you encounter any trouble, contact us
							<a
								href="mailto:info@notion-google-tasks-sync.com"
								target="_blank"
								class="underline"
							>
								via email
							</a>{' '}
							or{' '}
							<a
								href="https://github.com/aantipov/notion-google-tasks-website/issues"
								target="_blank"
								class="underline"
							>
								create an issue
							</a>{' '}
							on Github.
						</div>
					</div>
					<button
						class="mt-2 underline"
						onclick="document.getElementById('auth-error').style.display = 'none'"
					>
						CLOSE
					</button>
				</div>
			)
		}
		<div class="mx-4 my-2 flex justify-between">
			<a href="/">
				<Image src={LogoImage} class="inline-block" height="40" alt="smth" />
				<span class="font-medium">{serviceName}</span>
			</a>
			<div class="flex gap-x-2">
				<a href="https://twitter.com/_aantipov" class="flex items-center">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="16"
						height="16"
						viewBox="0 0 16 16"
						><path
							fill="currentColor"
							d="M9.294 6.928L14.357 1h-1.2L8.762 6.147L5.25 1H1.2l5.31 7.784L1.2 15h1.2l4.642-5.436L10.751 15h4.05L9.294 6.928ZM7.651 8.852l-.538-.775L2.832 1.91h1.843l3.454 4.977l.538.775l4.491 6.47h-1.843l-3.664-5.28Z"
						></path></svg
					><span class="hidden sm:inline">
						(<span class="hover:underline">Twitter</span>)
					</span>
				</a>
				<a
					class="flex items-center"
					href="https://github.com/aantipov/notion-google-tasks-website"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						><path
							fill="currentColor"
							d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z"
						></path></svg
					>
					<span class="hidden sm:inline"
						><span class="hover:underline">Github</span></span
					>
				</a>
			</div>
		</div>

		<div class="container mx-auto p-6">
			<slot />
		</div>

		<footer
			class="relative flex flex-col items-center justify-center bg-slate-800 px-4 py-12 text-xl text-white sm:text-lg"
		>
			<a
				href="https://www.producthunt.com/posts/notion-google-tasks-sync?utm_source=badge-featured&utm_medium=badge&utm_souce=badge-notion-google-tasks-sync"
				target="_blank"
				class="absolute left-8 hidden lg:inline"
				><img
					src="https://api.producthunt.com/widgets/embed-image/v1/featured.svg?post_id=436226&theme=light"
					alt="Notion <=> Google Tasks Sync - Free two-way sync between Notion & Google Tasks | Product Hunt"
					style="width: 250px; height: 54px;"
					width="250"
					height="54"
				/></a
			>
			<div>
				Made by &nbsp;<a href="https://alexei.me" class="underline"
					>Alexey Antipov</a
				>
			</div>
			<div class="mt-4 flex flex-wrap justify-center gap-x-10 gap-y-4 sm:gap-4">
				<a href="https://twitter.com/_aantipov" class="flex items-center">
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="16"
						height="16"
						viewBox="0 0 16 16"
						><path
							fill="currentColor"
							d="M9.294 6.928L14.357 1h-1.2L8.762 6.147L5.25 1H1.2l5.31 7.784L1.2 15h1.2l4.642-5.436L10.751 15h4.05L9.294 6.928ZM7.651 8.852l-.538-.775L2.832 1.91h1.843l3.454 4.977l.538.775l4.491 6.47h-1.843l-3.664-5.28Z"
						></path></svg
					>&nbsp;(<span class="hover:underline">Twitter</span>)
				</a>
				<a
					class="flex items-center"
					href="https://github.com/aantipov/notion-google-tasks-website"
				>
					<svg
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						><path
							fill="currentColor"
							d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z"
						></path></svg
					>&nbsp;<span class="hover:underline">Github</span>
				</a>
				<a href="/privacy-policy/" class="shrink-0 underline">Privacy policy</a>
				<a href="/terms-of-use/" class="shrink-0 underline">Terms of use</a>
			</div>
		</footer>
	</body>
</html>
