{
	"name": "notion-gtasks",
	"type": "module",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"astro": "astro",
		"dev": "astro dev --port 3000",
		"functions:dev": "astro build && wrangler pages dev ./dist --port=3000 --d1=DB --compatibility-flags=nodejs_compat",
		"build": "astro check && astro build",
		"deploy": "PUBLIC_ENV=production astro build && wrangler pages deploy ./dist",
		"deploy:prod": "PUBLIC_ENV=production astro build && wrangler pages deploy ./dist --branch=master",
		"_functions:build": "wrangler pages functions build ./functions",
		"wrangler": "wrangler",
		"db": "wrangler d1 execute notion-gtasks --local",
		"db:migration-gen": "drizzle-kit generate:sqlite",
		"db:migration-drop": "drizzle-kit drop",
		"db:migraion-check": "drizzle-kit check:sqlite",
		"db:drizzle-metadata-upgrade": "drizzle-kit up:sqlite",
		"db:exec-local": "wrangler d1 execute notion-gtasks --local",
		"db:exec-local-*": "wrangler d1 execute notion-gtasks --local --command='SELECT * FROM users'",
		"db:exec-prod": "wrangler d1 execute notion-gtasks",
		"db:exec-prod-*": "wrangler d1 execute notion-gtasks --command='SELECT * FROM users'",
		"db:prod:active-count": "wrangler d1 execute notion-gtasks --command='SELECT COUNT(*) FROM users WHERE sync_error IS NULL AND last_synced IS NOT NULL'",
		"upgrade": "pnpx npm-upgrade",
		"tail": "wrangler pages deployment tail"
	},
	"dependencies": {
		"@astrojs/check": "^0.4.1",
		"@astrojs/cloudflare": "^8.1.0",
		"@astrojs/react": "^3.0.9",
		"@astrojs/tailwind": "^5.1.0",
		"@astrojs/ts-plugin": "^1.4.0",
		"@cloudflare/pages-plugin-sentry": "^1.1.1",
		"@notionhq/client": "^2.2.13",
		"@sentry/browser": "^7.93.0",
		"@tanstack/react-query": "^5.8.4",
		"@types/react": "^18.2.37",
		"@types/react-dom": "^18.2.15",
		"astro": "^4.2.0",
		"drizzle-orm": "^0.29.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.2.2",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20231025.0",
		"@iconify/react": "^4.1.1",
		"@tsndr/cloudflare-worker-jwt": "^2.3.2",
		"drizzle-kit": "^0.20.4",
		"prettier": "^3.2.4",
		"prettier-plugin-astro": "^0.12.3",
		"prettier-plugin-sql": "^0.18.0",
		"prettier-plugin-tailwindcss": "^0.5.11",
		"wrangler": "^3.16.0"
	}
}
