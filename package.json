{
	"name": "notion-gtasks",
	"type": "module",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"astro": "astro",
		"dev": "astro dev --port 3000",
		"start": "astro dev --port 3000",
		"start:functions": "astro build && wrangler pages dev ./dist --port=3000 --d1=DB --compatibility-flags=nodejs_compat",
		"build": "astro check && astro build",
		"preview": "astro preview",
		"deploy": "astro build && wrangler pages deploy ./dist",
		"deploy:prod": "astro build && wrangler pages deploy ./dist --branch=master",
		"_functions:build": "wrangler pages functions build ./functions",
		"wrangler": "wrangler",
		"db": "wrangler d1 execute notion-gtasks --local",
		"db:migration-gen": "drizzle-kit generate:sqlite",
		"db:migration-drop": "drizzle-kit drop",
		"db:migraion-check": "drizzle-kit check:sqlite",
		"db:drizzle-metadata-upgrade": "drizzle-kit up:sqlite",
		"upgrade": "pnpx npm-upgrade"
	},
	"dependencies": {
		"@astrojs/check": "^0.3.1",
		"@astrojs/cloudflare": "^7.7.1",
		"@astrojs/react": "^3.0.5",
		"@astrojs/tailwind": "^5.0.2",
		"@astrojs/ts-plugin": "^1.3.1",
		"@notionhq/client": "^2.2.13",
		"@tanstack/react-query": "^5.8.4",
		"@types/react": "^18.2.37",
		"@types/react-dom": "^18.2.15",
		"astro": "^3.5.5",
		"drizzle-orm": "^0.29.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"tailwindcss": "^3.3.5",
		"typescript": "^5.2.2",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20231025.0",
		"@iconify/react": "^4.1.1",
		"@tsndr/cloudflare-worker-jwt": "^2.3.2",
		"drizzle-kit": "^0.20.4",
		"prettier": "^3.1.0",
		"prettier-plugin-astro": "^0.12.2",
		"prettier-plugin-sql": "^0.16.0",
		"prettier-plugin-tailwindcss": "^0.5.7",
		"wrangler": "^3.16.0"
	}
}
